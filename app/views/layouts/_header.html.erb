<div class="header-top-w3layouts" id="header">
  <div class="container">
    <div class="col-md-8 navigation">
      <nav class="navbar navbar-default">
      <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="collapse navbar-collapse nav-wil" id="bs-example-navbar-collapse-1">
          <nav class="link-effect-2" id="link-effect-2">
            <ul class="nav navbar-nav">
              <% menu = home_data.site_menu.split(",") %>
              <li class="active"><%= link_to "#{menu[0]}", root_path %></li>
              <li><a href="#vision" class="scroll"><span data-hover="<%= menu[1] %>"><%= menu[1] %></span></a></li>
              <li><a href="#works" class="scroll"><span data-hover="<%= menu[2] %>"><%= menu[2] %></span></a></li>
              <li><a href="#thoughts" class="scroll"><span data-hover="<%= menu[3] %>"><%= menu[3] %></span></a></li>
              <li><a href="#contact" class="scroll"><span data-hover="<%= menu[4] %>"><%= menu[4] %></span></a></li>
              <li><%= link_to "#{menu[5]}", members_path %></li>
              <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= menu[6] %><span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to menu[7], donation_list_path %></li>
                  <li><%= link_to menu[8], fund_list_path %></li>
                </ul>
              </li>
            </ul>
          </nav>
        </div>
      </nav>
    </div>
    <div class="col-md-4 sign-up">
      <% if user_signed_in? %>
        <li>
          <% if current_user.provider == "facebook" %>
            <%= link_to "Log Out", logout_path, class: "btn-auth btn-facebook" %>
          <% else %>
            <%= link_to "Log Out", logout_path, class: "btn btn-xs btn-success" %>
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to user_facebook_omniauth_authorize_path, :class=>"btn-auth btn-facebook" do %>
            Sign In
          <% end %>
        </li>
      <% end %>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
<%= render "layouts/sub_header", sub_header: (sub_header || false) %>
