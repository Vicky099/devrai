<div id="fb-root"></div>
<div class="news">
  <div class="container">
    <h3>News</h3>
    <div class="row">
      <div class="col-md-6">
        <div class="agileits_news_grid_left_gridl">
          <p class="para1"><%= @news.event_date.day %><span><%= @news.event_date.strftime("%b-%Y")%></span></p>
        </div>
        <div class="agileits_news_grid_left_gridr">
          <% if @news.picture.present? %>
            <%= cl_image_tag(@news.photo_url, :width => 100, :height => 150, :crop => :fill, class: 'thumbnail')%>
          <% else %>
            <%= image_tag 'default.png', class: 'img-responsive' %>
          <% end %>
          <h4><%= link_to @news.title, "#" %></h4>
          <p><%= @news.description %></p><br>
        </div>
      </div>
      <div class="col-md-5">
         <div class="fb-comments" data-href="<%= request.url %>" data-numposts="5"></div>
      </div>
    </div>
  </div>
</div>
<script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.12&appId=2028223010779950&autoLogAppEvents=1';
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));
</script>
