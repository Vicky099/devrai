<div id="fb-root"></div>
<div class="news">
  <div class="container">
    <% home = home_data %>
    <% if home.content5_header.present? %>
      <h3><%= home.content5_header %></h3>
    <% else %>
      <h3>Devrai News & Announcement's</h3>
    <% end %>
    <div class="row">
      <div class="col-md-6">
        <%= cl_image_tag(@news.photo_url, :width => 200, :height => 250, :crop => :fill)%>
          <div class="content">
            <h4><%= @news.title %></h4>
            <p><%= @news.description %></p><br>
          </div>
      </div>
      <div class="col-md-5">
         <div class="fb-comments" data-href="<%= request.url %>" data-numposts="5"></div>
      </div>
    </div>
  </div>
</div>
<script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.12&appId=2028223010779950&autoLogAppEvents=1';
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));
</script>
