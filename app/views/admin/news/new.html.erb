<div class="blog">
  <div class="container">
    <div class="leave">
      <h3>Devarai News</h3>
        <%= form_for @news, :url => admin_news_index_path, :method => :post do |f| %>
          <%= f.text_field :title, placeholder: 'News Title', required: true, class: 'form-control' %>
          <%= f.text_area :description, placeholder: 'Details about news', required: true , class: "form-control" %>
          <%= f.date_field :event_date, placeholder: 'Event date', required: true , class: "form-control" %><br/>
          <%= f.file_field :photo , class: "form-control" %></br>
          <%= f.submit "Share Now"%>
        <% end %>
    </div>
  </div>
</div>
