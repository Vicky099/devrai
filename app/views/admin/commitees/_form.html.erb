<div class="row">
  <div class="col-md-2 col-md-offset-5">
    <div id="profile-image">
      <%= cl_image_tag(@commitee.photo_url, :width => 50, :height => 150, :crop => :fill, :gravity => :face,:radius => :max, class: 'thumbnail')%>
      <br/>
      <div id="upload_button">
        <%= f.file_field :photo, class: "upload", onchange: "readURL(this);"%></br>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.text_field :name, placeholder: 'Name', required: true %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.text_field :designation, placeholder: 'Designation', required: true %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.text_field :bio, placeholder: 'Working Biodata', required: true %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.text_field :status, placeholder: 'Role', required: true %>
    </div>
  </div>
</div>
