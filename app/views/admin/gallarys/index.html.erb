<div class="news">
  <div class="container">
    <h3>Gallery</h3>
    <div class="row">
      <% @gallary.each_with_index do |image, index_main| %>
        <% image_index_main = index_main + 1%>
        <div class="column">
          <div class="content">
            <%= cl_image_tag(image.photo_url, :width => 200, :height => 200, :crop => :fill, :onclick=>"openModal();currentSlide(#{image_index_main})", :class=>"hover-shadow cursor") %>
            <p>
              <%= image.name %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
    <div>
      <%= will_paginate(@gallary)%>
    </div>
  </div>
</div>
<div id="myModal" class="modal">
  <span class="close cursor" onclick="closeModal()">&times;</span>
  <div class="modal-content">
    <% @gallary.each_with_index do |image, index| %>
      <% total_image_count = @gallary.size %>
      <% image_index = index+1 %>
      <div class="mySlides">
        <div class="numbertext"><%= image_index %> / <%= total_image_count %></div>
        <%= cl_image_tag(image.photo_url,:crop => :fill) %>
      </div>
    <% end %>
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>

      <div class="caption-container">
        <p id="caption"></p>
      </div>
    <% @gallary.each_with_index do |image, index| %>
      <% image_index = index+1 %>
      <div class="column">
        <%= cl_image_tag(image.photo_url, :width => 225, :height => 193, :crop => :fill, :onclick=>"currentSlide(#{image_index})", :class=>"demo cursor", :alt=>"Devrai best images (#{image_index})") %>
      </div>
    <% end %>
  </div>
</div>
